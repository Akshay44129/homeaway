<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
    <h2 class="mb-4">Your Profile Information</h2>

    <div class="card p-4 shadow-sm">
        <p><strong>Name:</strong> <%= user.username || "N/A" %></p>
        <p><strong>Email:</strong> <%= user.email || "N/A" %></p>
        <p><strong>Registered At:</strong> <%= user.createdAt.toDateString() %></p>
    </div>

    <a href="/listings" class="btn btn-primary mt-3">Back to Home</a>
</div>
